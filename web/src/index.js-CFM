/***
  SHORELINE + SURFACE TRACES
***/
function loadGMTContent(gmtContent, gtype) {
  const gmtReader = vtkGMTReader.newInstance();
  let gmtContentString=Decodeuint8arr(gmtContent);
  gmtReader.parseAsText(gmtContentString);
  const nbOutputs = gmtReader.getNumberOfOutputPorts();

  for (let idx = 0; idx < nbOutputs; idx++) {
    var source = gmtReader.getOutputData(idx); // polydata
    var name = source.get('name').name;
    var mapper = vtkMapper.newInstance();
    var actor = vtkActor.newInstance();

    var prop = vtkProperty.newInstance();
    prop.setLineWidth(1);
    prop.setOpacity(1);

    switch (gtype) {
      case 'blind':
         blind_scene.push({ name, source, mapper, actor });
         actorList.push(actor);
         prop.setColor(0.8,0.1,0.1); 
         break;
      case 'trace':
         trace_scene.push({ name, source, mapper, actor });
         actorList.push(actor);
         prop.setColor(1,0.1,1); 
         break;
      case 'coast':
         coast_scene.push({ name, source, mapper, actor });
         prop.setColor(0,0,0); 
         prop.setLineWidth(200);
         break;
    }

    actor.setProperty(prop);
    actor.setVisibility(0);
    actor.setMapper(mapper);
    mapper.setInputData(source);
    renderer.addActor(actor);
  }

  if(toggled === undefined && 
            retrieveSurfaceTraces_done() && retrieveShoreline_done()) {
    if(final_bounds_scene.length > 0 ) {
      toggled=true;
      toggleTraceAndFault(); 
      toggleShoreline();
    }
  }
  postRetrieveProcessing();
}

/***
  HAUKSSON + ROSS TRACES
***/
function loadEQContent(eqContent,etype,renderer,renderWindow) {

window.console.log("plot3d >> loadingEQContent "+etype);
  const eqReader = vtkEQReader.newInstance();
  let eqContentString=Decodeuint8arr(eqContent);
  eqReader.parseAsText(eqContentString);
  const nbOutputs = eqReader.getNumberOfOutputPorts();

  for (let idx = 0; idx < nbOutputs; idx++) {
    var source = eqReader.getOutputData(idx); // polydata
    var meta = source.get('meta').meta;
    var jmeta = JSON.parse(meta);
    var color = jmeta['color'];
    var sz = jmeta['size'];
    var r=color['r'];
    var g=color['g'];
    var b=color['b'];
    var mapper = vtkMapper.newInstance();
    var actor = vtkActor.newInstance();

    var prop = vtkProperty.newInstance();
    prop.setOpacity(1);
//    window.console.log("plot3d >> size of hypocenter>>"+sz);

    switch (etype) {
      case 'hauksson':
         hauksson_scene.push({ name, source, mapper, actor });
         prop.setEdgeVisibility(true);
         prop.setPointSize(sz);
         prop.setColor(r,g,b);
         break;
      case 'ross':
         ross_scene.push({ name, source, mapper, actor });
         prop.setEdgeVisibility(true);
         prop.setPointSize(sz);
         prop.setColor(r,g,b);
         break;
    }
    actor.setProperty(prop);
    actor.setVisibility(0);
    actor.setMapper(mapper);
    mapper.setInputData(source);
    renderer.addActor(actor);
  }

  postRetrieveProcessing();
}

