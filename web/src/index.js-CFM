    }
    if (userParams.viewBlind) {
      hold_blind=userParams.viewBlind;
    }

window.console.log("plot3d >> TO-SERVER: start loading");
    window.top.postMessage({'call':'from3DViewer',value:'start loading'}, '*');
    load(myContainer, userParams);
    buildOrientationMarker();
    toggleNorth();
  }
}

