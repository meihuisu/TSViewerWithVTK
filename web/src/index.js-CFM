//{"pos":[0,1,0],"angle":30,"viewup":[0,0,-1],"focal":[0,0,0]
function goto_newCamera(camera_str) {
  var track_shore=offShoreline();
  var track_trace=offTraceAndFault();
 
  let camera_info = JSON.parse(camera_str);
  let pos=camera_info['pos'];
  let angle=camera_info['angle'];
  let distance=camera_info['distance'];
  let viewup=camera_info['viewup'];
  let focal=camera_info['focal'];
  let tmp=camera_info['viewMatrix'];

//  print_camera("before the resetCamera call");
  renderer.resetCamera();

  if(pos) { activeCamera.setPosition(pos[0], pos[1], pos[2]); }
  if(focal) { activeCamera.setFocalPoint(focal[0], focal[1], focal[2]); }
  if(angle) { activeCamera.setViewAngle(angle); }
  if(viewup) { activeCamera.setViewUp(viewup[0], viewup[1], viewup[2]); }
  if(tmp) {
    let matrix= [tmp[0],tmp[1],tmp[2],tmp[3],tmp[4],tmp[5],tmp[6],tmp[7],tmp[8],tmp[9],tmp[10],tmp[11],tmp[12],tmp[13],tmp[14],tmp[15]];
    activeCamera.setViewMatrix(matrix);
  }
  if(distance) { activeCamera.setDistance(distance); }

  orientationWidget.updateMarkerOrientation();
  renderer.resetCamera();
  renderWindow.render();
// print_camera("after the resetCamera call");

  // bring shore/trace back if had to hide them earlier
  if(track_shore) { toggleShoreline(); }
  if(track_trace) { toggleTraceAndFault(); }
}

