      rootBody.style.padding = '0';
    }
    if (userParams.viewerType) {
      viewerType=userParams.viewerType;
    }
    if (userParams.viewUID) {
      hold_uid=userParams.viewUID;
    }
    if (userParams.viewTrace) {
